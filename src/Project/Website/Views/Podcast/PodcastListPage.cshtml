@model IEnumerable<Mvp.Feature.Search.Models.PodcastSearchResultItem>

    @if (Model == null)
    {
        return;
    }

    <div class="container">
        <div class="jumbotron text-center">
            <h1>MVP Podcasts</h1>
            <p>Use the Search to find your favority MVP or who is talking about what!</p>
        </div>
        <form method="post">
            <div class="form-group">
                <label for="phrase">Phrase:</label>
                <input type="text" class="form-control" name="phrase" id="phrase">
            </div>

            <button type="submit" class="btn btn-default">Submit</button>
        </form>

        @if (Model.Any())
        {
            <div class="text-center">
                <h2>Podcast Search Results</h2>
            </div>
            <div class="container">
                @foreach (var item in Model)
                {
                    <div class="row">
                        <div class="col-sm-12">
                            <h3>@item.PodcastName</h3>
                            <p>Lorem @item.PodcastTranscription</p>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
